		//Mensajes por pantalla
		
		System.out.println("Me encanta programar en Java, me compré un libro");
		
		//Tipos de variables numéricas
		byte b1 = 34; //Valores desde -128 a 127
		short c1 = 345; //Valores hasta 32764
		int i1 = 3400;
		long l1 = 45456456;
		
		//Declarar varias variables en la misma linea
		int x1 = 0,x2,x3,x4;
		//Las variables declaradas dentro de un método no se inicializan a ningún valor
		x2 = x1 +3;
		
		
		
		
		
		
		
		
		//
	}

}
